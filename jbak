#!/bin/bash

set   -o errexit
shopt -s dotglob extglob globstar nullglob

trap trap_int INT
trap_int () {
	printf >&2 'Interrupted\n'
	exit 1
}

  black=`tput setaf 0`
    red=`tput setaf 1`
  green=`tput setaf 2`
 yellow=`tput setaf 3`
   blue=`tput setaf 4`
magenta=`tput setaf 5`
   cyan=`tput setaf 6`
  white=`tput setaf 7`
  reset=`tput op`

print_c () {
	local    color=$1
	local   fmtstr=$2
	shift 2

	printf "%s$fmtstr%s\n" "${!color}" "$@" "$reset"
}

declare -a included excluded

read_config () {
	while read -r line; do
		case $line in
			""|\#*) continue ;; # Empty lines/comments
			/*) # Included Directories
				mode=include
				;;
			!/*) # Excluded Directories
				mode=exclude
				line=${line:1}
				;;
			!*) # Excluded Patterns
				print_c red '>%s<' "$line"
				continue
				;;
			*)
				printf >&2 'Error parsing config file.  Invalid line:\n'
				printf >&2 '    %s\n' "$line"
				exit 2
				;;
		esac

		# Quote spaces for eval
		line=`sed -e 's/\s/\\\&/g' <<< "$line"`
		# line=$(sed -e 's/\(^\|[^\]\)\(\(\\\{2\}\)*\s\)/\1\\\2/g' <<< "$line")
		eval "files=( $line )" # Expand shell globs
		files=("${files[@]%%/}") # Strip trailing slashes

		case $mode in
			include) # Included Directories
				declare -n ours=included
				declare -n theirs=excluded
				c_ls=blue
				c_ours_add=green
				c_ours_rm=red
				c_theirs_add=cyan
				c_theirs_rm=magenta
				;;
			exclude) # Excluded Directories
				declare -n ours=excluded
				declare -n theirs=included
				c_ls=yellow
				c_ours_add=cyan
				c_ours_rm=magenta
				c_theirs_add=green
				c_theirs_rm=red
				;;
			*)
				printf >&2 'Unknown error occurred.  Exiting.\n'
				exit 99
				;;
		esac

		for file in "${files[@]}"; do
			print_c $c_ls '>%s<' "$file"
			if [ "$mode" = 'include' ]; then
				add_file='true'
			else
				add_file='false'
			fi
			print_c $c_ls 'Searching ours...'
			for i in "${!ours[@]}"; do
				printf '>%s<\n' "${ours[$i]}"
				if [[ ${ours[$i]} == $file || -d ${ours[$i]} && $file =~ ^${ours[$i]}/ ]]; then
					print_c $c_ls 'Skipping >%s<' "$file"
					add_file='false'
					break
				elif [[ -d $file && ${ours[$i]} =~ ^$file/ ]]; then
					print_c $c_ours_rm 'Removed >%s<' "${ours[$i]}"
					unset "ours[$i]"
				fi
			done
			print_c $c_ls 'Searching theirs...'
			for i in "${!theirs[@]}"; do
				printf '>%s<\n' "${theirs[$i]}"
				if [[ ${theirs[$i]} == $file ||
						-d $file && ${theirs[$i]} =~ ^$file/ ]]
				then
					print_c $c_theirs_rm 'Removed >%s<' "${theirs[$i]}"
					unset "theirs[$i]"
				elif [[ -d ${theirs[$i]} &&
						$file =~ ^${theirs[$i]}/ ]]; then
					print_c $c_ours_add 'Adding >%s<' "$file"
					add_file='true'
					break
				fi
			done
			if [ "$add_file" = 'true' ]; then
				print_c $c_ours_add 'Added >%s<' "$file"
				ours+=("$file")
			fi
		done
	done < "$1"
}

read_config 'test_dirs'

printf 'Included:\n'
for file in "${included[@]}"; do
	printf '>%s<\n' "$file"
done
printf 'Excluded:\n'
for file in "${excluded[@]}"; do
	printf '>%s<\n' "$file"
done
